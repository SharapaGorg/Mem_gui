<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MEM_GUI.ViewModels;assembly=MEM_GUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="MEM_GUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MEM_GUI">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text = "PC directories:" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
            <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
